/**
 * Folder-specific settings.
 *
 * See the Zed documentation for a full list of overridable settings and general information:
 * https://zed.dev/docs/configuring-zed#settings-files
 */
{
	"lsp": {
		"biome": {
			"settings": {
				"config_path": "biome.json"
			}
		}
	},
	"languages": {
		"CSS": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"JavaScript": {
			"code_actions_on_format": {
				"source.organizeImports.biome": true
			},
			"formatter": { "language_server": { "name": "biome" } }
		},
		"TSX": {
			"code_actions_on_format": {
				"source.organizeImports.biome": true
			},
			"formatter": { "language_server": { "name": "biome" } }
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.organizeImports.biome": true
			},
			"formatter": { "language_server": { "name": "biome" } }
		}
	}
}
